FUNCTION_BLOCK acceleracio

VAR_INPUT

        curva : REAL;
        velocitat : REAL;

END_VAR

VAR_OUTPUT

        acceleracio : REAL;
        fre : REAL;

END_VAR

FUZZIFY curva
        TERM recta := (-0.1,0) (0.0,1) (0.1,0);

        TERM fluixaEsquerra := (0.5,0) (2.0, 1) (3,0);
        TERM migEsquerra := (2.5, 0) (3.0,1) (5.0,1) (6.0,0);
        TERM fortaEsquerra := (6, 0) (8.0,1) (60.0,1);

        TERM fluixaDreta := (-3.0,0)(-2.0, 1) (-0.5, 0);
        TERM migDreta := (-6.0,0) (-5.0,1) (-3.0,1) (-2.5, 0);
        TERM fortaDreta := (-60.0,1) (-8.0,1) (-6, 0) ;
END_FUZZIFY

FUZZIFY velocitat
        TERM lent := (0.0,1)(70.0,1)(90.0,0);
        TERM mig := (80.0,0)(90.0,1)(130.0,1)(160.0,0);
        TERM toreto := (180.0,0)(190.0,1)(300.0,1);
END_FUZZIFY



DEFUZZIFY acceleracio
        TERM no := (0.0,1)(0.1,0);
        TERM mig := (0.1,0)(0.2,1)(0.6,1)(0.7,0);
        TERM gas := (0.7,0)(0.8,1)(1.0,1);
        METHOD : COG;
        DEFAULT := 0.0;
END_DEFUZZIFY

DEFUZZIFY fre
        TERM no := (0.0, 0);
        TERM freDeMa := (0.1, 0) (0.5, 1) (1.0, 1);
        METHOD : COG;
        DEFAULT := 0.0;
END_DEFUZZIFY



RULEBLOCK acceleracio

        AND : MIN;
        ACT : MIN;
        ACCU : MAX;

        //RULE 1 : IF velocitat IS NOT toreto THEN fre IS no;

        RULE 2 : IF (curva IS fortaDreta OR curva IS fortaEsquerra) AND velocitat IS toreto THEN fre IS freDeMa;

        RULE 3 : IF (curva IS migDreta OR curva is migEsquerra) THEN acceleracio IS gas;

        RULE 4 : IF (curva IS fortaDreta OR curva IS fortaEsquerra) AND velocitat IS lent THEN acceleracio IS mig;

        RULE 5 : IF (curva IS migDreta OR curva IS migEsquerra)  AND velocitat IS lent THEN fre IS no;

        RULE 6 : IF (curva IS fluixaDreta OR curva is fluixaEsquerra) THEN acceleracio IS gas;

        RULE 7 : IF (curva IS fluixaDreta OR curva is fluixaEsquerra) THEN fre IS no;

        RULE 8 : IF (curva is recta) THEN acceleracio IS gas;

        RULE 9 : IF (curva is recta) THEN fre IS no;


END_RULEBLOCK

END_FUNCTION_BLOCK


