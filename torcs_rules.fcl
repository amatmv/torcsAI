FUNCTION_BLOCK gir

VAR_INPUT
        acceleracio : REAL;
        fre : REAL;
        distVoralDret : REAL;
        distVoralEsquerre : REAL;
        curva : REAL;
END_VAR

VAR_OUTPUT
        gir : REAL;
END_VAR

FUZZIFY acceleracio
        TERM no := (0.0,1)(0.1,0);
        TERM mig := (0.1,0)(0.2,1)(0.6,1)(0.7,0);
        TERM gas := (0.7,0)(0.8,1)(1.0,1);
END_FUZZIFY

FUZZIFY distVoralDret
        TERM aProp := (0.9,0)(0.95,1)(1,1);
        TERM mig := (0.2,0)(0.3,1)(0.5,1)(0.95,0);
        TERM lluny := (0.0,1)(0.2,1)(0.3,0);
END_FUZZIFY

FUZZIFY distVoralEsquerre
        TERM aProp := (0.9,0)(0.95,1)(1,1);
        TERM mig := (0.2,0)(0.3,1)(0.5,1)(0.95,0);
        TERM lluny := (0.0,1)(0.2,1)(0.3,0);
END_FUZZIFY

FUZZIFY fre
        TERM no := (0.0, 0);
        TERM freDeMa := (0.1, 0) (0.5, 1) (1.0, 1);
END_FUZZIFY

FUZZIFY curva
          TERM recta := (-0.1,0) (0.0,1) (0.1,0);

          TERM fluixaEsquerra := (0.5,0) (2.0, 1) (3,0);
          TERM migEsquerra := (2.5, 0) (3.0,1) (5.0,1) (6.0,0);
          TERM fortaEsquerra := (6, 0) (8.0,1) (60.0,1);

          TERM fluixaDreta := (-3.0,0)(-2.0, 1) (-0.5, 0);
          TERM migDreta := (-6.0,0) (-5.0,1) (-3.0,1) (-2.5, 0);
          TERM fortaDreta := (-60.0,1) (-8.0,1) (-6, 0) ;
END_FUZZIFY



DEFUZZIFY gir
        TERM no := (0.0, 0);

        TERM suauDreta := (0.0,0) (0.01,1) (0.1,1) (0.11,0);
        TERM migDreta := (0.11,0) (0.2, 1) (0.25,0);
        TERM moltDreta := (0.26, 0) (0.30, 1) (1.0, 1);

        TERM suauEsquerra := (-0.11,0) (-0.1,1) (-0.01,1) (0.0,0);
        TERM migEsquerra := (-0.25,0) (-0.2,1) (-0.11,0) ;
        TERM moltEsquerra := (-1.0, 1)(-0.3, 1) (-0.26,0) ;

        METHOD : COG;
        DEFAULT := 0.0;
END_DEFUZZIFY

RULEBLOCK gir

        AND : MIN;
        ACT : MIN;
        ACCU : MAX;

        //RULE 1 : IF distVoralDret IS lluny THEN gir IS suauEsquerra;

        //RULE 2 : IF distVoralEsquerre IS lluny THEN gir IS suauDreta;

        RULE 3 : IF (distVoralDret IS aProp OR curva IS fluixaDreta) AND acceleracio IS NOT gas THEN gir IS suauDreta;

        RULE 4 : IF (distVoralEsquerre IS aProp OR curva IS fluixaEsquerra) AND acceleracio IS NOT gas THEN gir IS suauEsquerra;

        RULE 5 : IF (distVoralDret IS aProp OR curva IS fortaEsquerra) AND acceleracio IS gas THEN gir IS moltEsquerra;

        RULE 6 : IF (distVoralEsquerre IS aProp OR curva IS fortaDreta) AND acceleracio IS gas THEN gir IS moltDreta;

        RULE 7 : IF (distVoralDret IS aProp OR curva IS fortaEsquerra) THEN gir IS moltEsquerra;

        RULE 8 : IF (distVoralEsquerre IS aProp OR curva IS fortaDreta) THEN gir IS moltDreta;

END_RULEBLOCK

END_FUNCTION_BLOCK


